{
    "name": "@qazuor/qzpay-mercadopago",
    "version": "1.0.1",
    "description": "MercadoPago payment adapter for QZPay billing library",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": ["dist"],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "lint": "biome check --write src",
        "test": "vitest",
        "test:run": "vitest run",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "billing",
        "payments",
        "subscriptions",
        "mercadopago",
        "mercado-pago",
        "qzpay"
    ],
    "author": "qazuor@gmail.com",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/qazuor/qzpay",
        "directory": "packages/mercadopago"
    },
    "bugs": {
        "url": "https://github.com/qazuor/qzpay/issues"
    },
    "homepage": "https://github.com/qazuor/qzpay/tree/main/packages/mercadopago#readme",
    "engines": {
        "node": ">=22"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@qazuor/qzpay-core": "workspace:*"
    },
    "peerDependencies": {
        "mercadopago": ">=2.0.0"
    },
    "devDependencies": {
        "mercadopago": "^2.0.0",
        "typescript": "^5.7.0",
        "tsup": "^8.3.0",
        "vitest": "^2.1.0"
    }
}
