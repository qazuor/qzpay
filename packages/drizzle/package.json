{
    "name": "@qazuor/qzpay-drizzle",
    "version": "1.0.1",
    "description": "Drizzle ORM storage adapter for QZPay billing library",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./schema": {
            "import": {
                "types": "./dist/schema/index.d.ts",
                "default": "./dist/schema/index.js"
            },
            "require": {
                "types": "./dist/schema/index.d.cts",
                "default": "./dist/schema/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "test": "vitest",
        "test:run": "vitest run",
        "clean": "rm -rf dist",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "keywords": [
        "billing",
        "payments",
        "subscriptions",
        "drizzle",
        "orm",
        "postgres",
        "storage"
    ],
    "author": "qazuor@gmail.com",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/qazuor/qzpay",
        "directory": "packages/drizzle"
    },
    "bugs": {
        "url": "https://github.com/qazuor/qzpay/issues"
    },
    "homepage": "https://github.com/qazuor/qzpay/tree/main/packages/drizzle#readme",
    "engines": {
        "node": ">=22"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@qazuor/qzpay-core": "workspace:*",
        "drizzle-zod": "^0.5.0"
    },
    "peerDependencies": {
        "drizzle-orm": ">=0.35.0",
        "postgres": ">=3.4.0",
        "zod": ">=3.0.0"
    },
    "devDependencies": {
        "@testcontainers/postgresql": "^11.11.0",
        "drizzle-kit": "^0.31.8",
        "drizzle-orm": "^0.45.1",
        "postgres": "^3.4.0",
        "testcontainers": "^11.11.0",
        "zod": "^3.23.0"
    }
}
