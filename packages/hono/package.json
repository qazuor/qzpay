{
    "name": "@qazuor/qzpay-hono",
    "version": "1.0.1",
    "description": "Hono middleware and handlers for QZPay billing library",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "lint": "biome check --write src",
        "test": "vitest",
        "test:run": "vitest run",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "billing",
        "payments",
        "subscriptions",
        "hono",
        "middleware",
        "qzpay"
    ],
    "author": "qazuor@gmail.com",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/qazuor/qzpay",
        "directory": "packages/hono"
    },
    "bugs": {
        "url": "https://github.com/qazuor/qzpay/issues"
    },
    "homepage": "https://github.com/qazuor/qzpay/tree/main/packages/hono#readme",
    "engines": {
        "node": ">=22"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@hono/zod-validator": "^0.7.6",
        "@qazuor/qzpay-core": "workspace:*"
    },
    "peerDependencies": {
        "hono": ">=4.0.0",
        "zod": ">=3.0.0"
    },
    "devDependencies": {
        "@qazuor/qzpay-drizzle": "workspace:*",
        "@testcontainers/postgresql": "^10.21.3",
        "drizzle-orm": "^0.39.0",
        "hono": "^4.6.0",
        "postgres": "^3.4.5",
        "tsup": "^8.3.0",
        "typescript": "^5.7.0",
        "vitest": "^2.1.0",
        "zod": "^3.23.0"
    }
}
