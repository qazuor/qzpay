{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src/**", "package.json", "tsconfig.json", "tsup.config.ts"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": ["build"],
            "inputs": ["src/**", "test/**", "*.config.ts"],
            "outputs": ["coverage/**"]
        },
        "test:run": {
            "dependsOn": ["build"],
            "inputs": ["src/**", "test/**", "*.config.ts"]
        },
        "lint": {
            "inputs": ["src/**", "test/**", "*.json", "*.ts"]
        },
        "typecheck": {
            "dependsOn": ["^build"],
            "inputs": ["src/**", "test/**", "tsconfig.json"]
        },
        "clean": {
            "cache": false
        }
    }
}
