{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**/packages/**/*.ts",
            "**/packages/**/*.tsx",
            "**/test/**/*.ts",
            "!**/node_modules",
            "!**/node_modules",
            "!**/dist",
            "!**/dist",
            "!**/build",
            "!**/.next",
            "!**/.nuxt",
            "!**/coverage",
            "!**/.turbo",
            "!**/.changeset"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 140
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "recommended": true,
                "noUnusedImports": "error",
                "noUnusedVariables": "error"
            },
            "suspicious": {
                "recommended": true,
                "noExplicitAny": "error"
            },
            "style": {
                "recommended": true,
                "useConst": "error",
                "noNonNullAssertion": "warn"
            },
            "complexity": {
                "recommended": true,
                "noExcessiveCognitiveComplexity": {
                    "level": "warn",
                    "options": {
                        "maxAllowedComplexity": 15
                    }
                }
            },
            "security": {
                "recommended": true
            },
            "performance": {
                "recommended": true
            },
            "a11y": {
                "recommended": true
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "none",
            "quoteProperties": "asNeeded",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "arrowParentheses": "always"
        }
    },
    "json": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 140
        }
    }
}
