    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "husky": "^9.0.0",
    "msw": "^2.7.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "author": "qazuor@gmail.com",
  "repository": "https://github.com/qazuor/qzpay"
